<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NiceStart.ActionBar" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="buttonLog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="buttonOut" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="editUser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="editPass">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="editEmail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="usuario">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="bio">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Nombre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="info">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">36dp</item>
    </style>
</resources>