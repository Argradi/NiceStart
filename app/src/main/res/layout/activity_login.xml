<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Login_activity">

    <ImageView
        android:id="@+id/girl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:scaleType="fitStart"
        android:src="@drawable/girl" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_action_name"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="@+id/main"
        app:tint="@color/light_green" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tly"
        android:layout_width="327dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="@id/guia2"
        app:layout_constraintStart_toStartOf="@id/guia1"
        app:layout_constraintTop_toBottomOf="@id/imagen">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@color/white"
            android:text="Name"
            app:layout_constraintTop_toTopOf="@id/tly"
            app:layout_constraintEnd_toEndOf="@id/tly"
            app:layout_constraintStart_toStartOf="@id/tly" />



    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintEnd_toEndOf="@id/tly"
        app:layout_constraintStart_toStartOf="@id/tly"
        android:background="@color/white"
        android:alpha="0.7"/>

    <Button
        android:id="@+id/boton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adios"
        app:layout_constraintBottom_toTopOf="@id/botabajo"
        app:layout_constraintEnd_toStartOf="@+id/guia2"
        app:layout_constraintStart_toEndOf="@id/boton1"
        app:layout_constraintTop_toBottomOf="@id/tly"
        app:layout_constraintVertical_bias="0.616"
        app:shapeAppearance="0" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hola"
        app:layout_constraintBottom_toBottomOf="@id/botabajo"
        app:layout_constraintEnd_toStartOf="@id/boton2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/guia1"
        app:layout_constraintTop_toBottomOf="@id/tly"
        app:layout_constraintVertical_bias="0.572"
        app:shapeAppearance="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <Button
        android:id="@+id/botabajo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:text="Boton de abajo"
        app:shapeAppearance="0" />

</androidx.constraintlayout.widget.ConstraintLayout>